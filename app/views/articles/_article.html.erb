<li>
  <div class="article-image">
  	<% if article.summary.include?("<img") %>
  		<%= link_to image_tag(get_image(article.summary), alt: 'article image'), article_path(article) %>
  	<% else %>
  		<%= link_to image_tag(article.feed.image_src, alt: 'article image'), article_path(article) %>
  	<% end %>
  </div>
  <p class="name lead text"><small><%= time_ago(article.published)%><span class="feed-name"> | <%= link_to article.feed.name, feed_path(article.feed) %></span></br></small><%= link_to article.title, article_path(article) %></p>
  <% unless article.summary.include?("<li") %>
	  <div class="description text">
	  	<%=raw article.summary %>
	  </div>  	
  <% end %>
</li>