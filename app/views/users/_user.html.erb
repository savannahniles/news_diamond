<li>
  <%= link_to user.first_name, user %>
  <%= link_to user.last_name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
  <% if user.admin? %>
  <span class="pull-right">Admin</span>
  <% end %>
</li>