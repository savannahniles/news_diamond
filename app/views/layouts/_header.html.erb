<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "news diamond", root_path, id: "logo" %>
      <%= link_to image_tag("/assets/diamond-white.png", alt: 'diamond logo', class: 'logo-diamond'), root_path %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Today", '#' %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Your Subscriptions", current_user %></li>
                <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Invite Friends", help_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
            <% if current_user.admin? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Admin <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Users", users_path %></li>
                  <li><%= link_to "Sections", '#' %></li>
                  <li><%= link_to "Subscriptions", '#' %></li>
                </ul>
            </li>
            <% end %>
          <% else %>
            <li><%= link_to "About", root_path %></li>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
          <%= link_to image_tag("/assets/question.png", alt: 'help', class: 'help-icon'), help_path %>
        </ul>
      </nav>
    </div>
  </div>
</header>