<% provide(:title, "Edit Feed") %>
<h1>Update Feed</h1>

<div class="row">
  <div class="form">
    <%= form_for(@feed) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
	  <%= f.text_field :name %>
	  <%= f.label :description %>
	  <%= f.text_area :description %>
	  <%= f.hidden_field :section_id, :value => @feed.section_id %>
	  <%= f.hidden_field :section, :value => @feed.section %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>